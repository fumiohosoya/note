<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <session class="user_info">
        <%= render 'shared/user_info' %>  
      </session>    
      <session class="note_form">
       <%= render 'shared/note_form' %>
      </session> 
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
      <h1>Welcome to Note</h1>
      
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-danger" %>
  </div>
<% end %>

